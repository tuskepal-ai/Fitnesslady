const API_URL = "https://script.google.com/macros/s/AKfycbwjO9J7HStZjUyZZMv2_gq3CMKgcYwoEbzl0cX6MqhoUzHtv1BVHqpocCiwUZCgrmeLGA/exec";

async function login(email, password) {

  const res = await fetch(API_URL, {
    method: "POST",
    body: JSON.stringify({
      action: "authLogin",
      email: email,
      password: password
    })
  });

  const data = await res.json();

  if (data.ok) {
    localStorage.setItem("session_token", data.session_token);
    window.location.href = "/hu/dashboard/";
  } else {
    alert(data.error);
  }
}
